{
  "compilerOptions": {
    "incremental": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": [ "esnext" ],
    "module": "commonjs",
    "outDir": "build",
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext"
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "./build/**/*.ts"
  ]
}